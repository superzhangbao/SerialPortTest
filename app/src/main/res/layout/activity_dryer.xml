<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="烘干机"
            android:textSize="22sp"
            android:textColor="@color/colorAccent"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"/>
        <Button
            android:id="@+id/btn_finsh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关闭"
            android:layout_centerInParent="true"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            style="@style/Base.TextAppearance.AppCompat.Widget.Button"/>

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <LinearLayout
            android:id="@+id/ll_dryer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="visible">
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="HIGH"
                android:id="@+id/btn_high"/>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="MED"
                android:id="@+id/btn_med"/>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="LOW"
                android:id="@+id/btn_low"/>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="match_parent"
                android:text="NOHEAT"
                android:id="@+id/btn_no_heat"/>
            <!--<Button-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_weight="1.5"-->
                <!--android:layout_height="match_parent"-->
                <!--android:text="加强洗"-->
                <!--android:id="@+id/btn_super"/>-->
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="开始"
                android:id="@+id/btn_start"/>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="设置"
                android:id="@+id/btn_setting"/>
            <Button
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:text="强制停止"
                android:id="@+id/btn_kill"/>
            <Button
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:text="初始化"
                android:id="@+id/btn_init"/>
            <Button
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:text="NoHeat开始"
                android:id="@+id/btn_noheat_start"/>

        </LinearLayout>
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_open_port"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="打开串口"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_clear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="清空"
            android:textAllCaps="false" />

        <RadioGroup
            android:id="@+id/rg_rev"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/cb_hex_rev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hex接收"
                android:checked="true"/>

            <!--<RadioButton-->
                <!--android:id="@+id/cb_text_rev"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Text接收" />-->
        </RadioGroup>
    </LinearLayout>
    <EditText
        android:id="@+id/editTextRecDisp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clickable="false"
        android:editable="false"
        android:gravity="top"
        android:longClickable="false"
        android:textSize="14sp" />
</LinearLayout>